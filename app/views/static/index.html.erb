<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <h1>Pomodoro Timer</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-sm-offset-2 col-sm-4 col-md-offset-3 col-md-3">
     <div class="break">
       <p>Break Length</p>
      <button id="break_minus">-</button>
       <p id="break_length">5</p>
      <button id="break_plus">+</button>
      </div>
    </div>
    <div class="col-xs-6 col-sm-4 col-md-3">
      <div class="pomodoro">
        <p>Pomodoro Length</p>
        <button id="pomodoro_minus">-</button>
        <p id="pomodoro_length">1</p>
        <button id="pomodoro_plus">+</button>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="timer">
        <div class="pomodoro_display">
          <p id="state"></p>
          <p id="timer_display">1</p>
        </div>
      </div>
    </div>
  </div>
</div>
